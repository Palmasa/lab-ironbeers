
<div class="myCont-random container">
    <img src="{{beer.image_url}}" class="random-beer" alt="Pic of {{beer.name}}">
    <div>
        <h2 class="display-4">{{beer.name}}</h2>
        <h5 class="tagline-beers">{{beer.tagline}}</h5>
        <p>{{beer.description}}</p>
        <p><b>Food pairing:</b></p>
        <ul>
            {{#each beer.food_pairing as |food|}}
            <li>{{food}}</li>
            {{/each}}
        </ul>
        <p><b>Brewers tips:</b> {{beer.brewers_tips}}</p>
        <a class="btn btn-secondary btn-sm col-2" href="/random-beers" role="button">Another one!</a>
    </div>
</div>
