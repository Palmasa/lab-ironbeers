{{#each beers as |beer|}}
<div class="myCont-random container">
    <img src="{{image_url}}" class="random-beer" alt="Pic of {{name}}">
    <div>
        <h2 class="display-4">{{name}}</h2>
        <h5 class="tagline-beers">{{tagline}}</h5>
        <p>{{description}}</p>
        <p><b>Food pairing:</b></p>
        <ul>
            {{#each food_pairing as |food|}}
            <li>{{food}}</li>
            {{/each}}
        </ul>
        <p><b>Brewers tips:</b> {{brewers_tips}}</p>
        <p class="s">Not convinced? <a class="btn btn-secondary btn-sm col-1 s" href="/random-beers" role="button">Next!</a></p>
    </div>
</div>
{{/each}}